# Dockerfile para MIT Tracking API
FROM python:3.11-slim

# Metadados
LABEL maintainer="MIT Tracking Team"
LABEL description="MIT Tracking GraphQL + OpenAPI Server"
LABEL version="2.0.0"

# Variáveis de ambiente
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

# Diretório de trabalho
WORKDIR /app

# Instalar dependências do sistema
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copiar arquivos de dependências
COPY requirements.txt requirements-api.txt ./

# Instalar dependências Python
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir -r requirements-api.txt

# Copiar código da aplicação
COPY . .

# Criar usuário não-root para segurança
RUN useradd --create-home --shell /bin/bash app && \
    chown -R app:app /app && \
    mkdir -p /app/logs && \
    chown app:app /app/logs

# Mudar para usuário não-root
USER app

# Expor portas
EXPOSE 8000 8001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Script de inicialização
COPY docker-entrypoint-api.sh /app/
USER root
RUN chmod +x /app/docker-entrypoint-api.sh
USER app

# Comando padrão
ENTRYPOINT ["/app/docker-entrypoint-api.sh"]
CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "8000"]