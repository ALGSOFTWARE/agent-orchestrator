# Production Environment Variables
# Copy this file to .env and fill in the values

# === DOMAIN & SSL ===
DOMAIN=gatekeeper-mvp.com
SSL_EMAIL=admin@gatekeeper-mvp.com

# === DATABASE ===
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD
MONGODB_URI=mongodb://admin:CHANGE_ME_STRONG_PASSWORD@mongodb:27017/gatekeeper?authSource=admin

# === REDIS ===
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@redis:6379

# === API KEYS ===
OPENAI_API_KEY=sk-...
GEMINI_API_KEY=AI...
JWT_SECRET=CHANGE_ME_JWT_SECRET_MINIMUM_32_CHARACTERS

# === AWS S3 (Optional) ===
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
S3_BUCKET_NAME=gatekeeper-files-prod
AWS_REGION=us-east-1

# === MONITORING ===
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# === LOG SETTINGS ===
LOG_LEVEL=INFO
MAX_LOG_FILES=30
MAX_LOG_SIZE=100MB

# === PERFORMANCE ===
MAX_WORKERS=4
MAX_UPLOAD_SIZE=50MB
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=120

# === SECURITY ===
ALLOWED_HOSTS=gatekeeper-mvp.com,www.gatekeeper-mvp.com,api.gatekeeper-mvp.com
CORS_ORIGINS=https://gatekeeper-mvp.com,https://www.gatekeeper-mvp.com
SECURE_COOKIES=true
HSTS_MAX_AGE=31536000

# === BACKUP ===
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30